# PostgreSQL Database URL
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require"

# Direct URL for migrations (optional, Prisma uses it internally)
DIRECT_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require"

# App Port (Render/Heroku will override this automatically)
PORT=4000

# JWT Secrets (replace with secure random strings)
JWT_ACCESS_SECRET="your_jwt_access_secret"
JWT_REFRESH_SECRET="your_jwt_refresh_secret"

# Redis Connection
REDIS_URL="redis://default:PASSWORD@HOST:PORT"

# Gmail (App Password if using Gmail)
GMAIL_USER="your_email@gmail.com"
GMAIL_PASS="your_generated_app_password"

# Admin Email (for notifications/system tasks)
ADMIN_EMAIL="your_admin_email@example.com"
